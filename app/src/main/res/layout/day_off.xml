<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorData"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:textSize="22sp"
            android:text="29.04"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/date_tv"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Пятница"
            android:padding="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/day_of_week_tv"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:textStyle="bold|italic"
            android:textColor="@color/colorDayOfWeek"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:text="@string/day_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/colorTextDayOff"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorBackgroundDayOff"
        android:id="@+id/textView" />

</LinearLayout>