<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMainActivity"
    tools:context="ru.furman.shedule.MainActivity">

    <ListView
        android:id="@+id/days_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:background="@color/colorBackgroundDayList"
        android:divider="@color/colorBackgroundMainActivity"
        android:dividerHeight="20dp"
        android:listSelector="@android:color/transparent"
        ></ListView>

</RelativeLayout>
