<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorData"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:textSize="22sp"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/date_tv"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/day_of_week_tv"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:textStyle="bold|italic"
            android:textColor="@color/colorDayOfWeek"
            android:textSize="22sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/double_period_table_layout"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:layout_height="match_parent">
    </TableLayout>

</LinearLayout>